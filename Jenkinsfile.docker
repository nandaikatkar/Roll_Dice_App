pipeline {
    agent any

    environment {
        IMAGE_NAME = 'flutter-app-builder'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "📥 Cloning repository"
                git branch: 'main', url: 'https://github.com/nandaikatkar/Roll_Dice_App.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "🐳 Building Docker image"
                script {
                    dockerImage = docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Run Flutter Commands in Docker') {
            steps {
                echo "🚀 Running flutter pub get, analyze, and build in container"
                script {
                    dockerImage.inside {
                        // Fix git safe directory issue
                       
                        sh 'git config --add safe.directory /sdks/flutter'


                        // Optional: fix permissions if needed (use with caution)
                        sh 'sudo chown -R $(whoami):$(whoami) /sdks/flutter || true'

                        // Run flutter commands
                        sh 'flutter pub get'
                        sh 'flutter analyze'
                        sh 'flutter build apk --release'
                    }
                }
            }
        }

        stage('Archive APK') {
            steps {
                echo "📦 Archiving APK"
                archiveArtifacts artifacts: 'build/app/outputs/flutter-apk/app-release.apk', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Docker Build Successful!'
        }
        failure {
            echo '❌ Docker Build Failed.'
        }
    }
}
