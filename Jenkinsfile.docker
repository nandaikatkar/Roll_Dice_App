pipeline {
    agent any

    environment {
        IMAGE_NAME = 'flutter-app-builder'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "ğŸ“¥ Cloning repository"
                git branch: 'main', url: 'https://github.com/nandaikatkar/Roll_Dice_App.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "ğŸ³ Building Docker image"
                script {
                    dockerImage = docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Run Flutter Commands in Docker') {
            steps {
                echo "ğŸš€ Running flutter pub get, analyze, and build in container"
                script {
                    dockerImage.inside {
                        sh 'flutter pub get'
                        sh 'flutter analyze'
                        sh 'flutter build apk --release'
                    }
                }
            }
        }

        stage('Archive APK') {
            steps {
                echo "ğŸ“¦ Archiving APK"
                archiveArtifacts artifacts: 'build/app/outputs/flutter-apk/app-release.apk', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'âœ… Docker Build Successful!'
        }
        failure {
            echo 'âŒ Docker Build Failed.'
        }
    }
}
